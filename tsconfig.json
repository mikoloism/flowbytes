{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"vendors/pipe": ["vendors/operator/pipe.ts"],
			"vendors/compose": ["vendors/operator/compose.ts"],
			"vendors/position": ["vendors/position.ts"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
