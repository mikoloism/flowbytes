{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"event::click": ["dom-events/events/click.ts"],
			"event::keydown": ["dom-events/events/keydown.ts"],
			"event::keypress": ["dom-events/events/keypress.ts"],
			"event::enums": ["dom-events/helpers/keyboard.enum.ts"],

			"shape::base": ["shape/index.ts"],
			"shape::circle": ["shape/shapes/circle.ts"],
			"shape::rectangle": ["shape/shapes/rectangle.ts"],
			"shape::square": ["shape/shapes/square.ts"],
			"shape::triangle": ["shape/shapes/triangle.ts"],

			"vendors/pipe": ["vendors/operator/pipe.ts"],
			"vendors/compose": ["vendors/operator/compose.ts"],
			"vendors/task": ["vendors/operator/task.ts"],
			"vendors/chain": ["vendors/operator/chain.ts"],

			"vendors/position": ["vendors/position/index.ts"],
			"vendors/app": ["vendors/startup/index.ts"],

			"storage/base": ["vendors/storage/base.ts"],
			"storage/cache": ["vendors/storage/cache.ts"],

			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
